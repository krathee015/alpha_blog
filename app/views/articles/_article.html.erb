<div class="Container">
<% @a_index.each do |a| %>
    <div class= "row justify-content-md-center">
        <div class= "col-8 mt-4">
            <div class="card text-center shadow  mb-5 border-dark rounded">
                <div class="card-header text-white bg-dark font-italic">
                    by <%= link_to a.user.username, user_path(a.user)%>
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= link_to a.title, article_path(a), class: "text-success "%></h5>
                    <p class="card-text"><%= truncate(a.description, length: 40) %></p>
                    <a href="#" ><%= link_to 'View', article_path(a), class: "btn btn-outline-success" %></a>
                    <% if logged_in? && (a.user == current_user || current_user.admin?) %>
                        <a href="#"><%= link_to 'Edit', edit_article_path(a), class: "btn btn-outline-info" %></a>
                        <a href="#"><%= link_to 'Delete', article_path(a), class: "btn btn-outline-danger"%> </a>
                    <% end %>
                </div>
                <div class="card-footer text-white bg-dark text-muted">
                    <small> Created <%= time_ago_in_words(a.created_at) %> ago,
                    edited <%= time_ago_in_words(a.updated_at) %> ago </small>
                </div>
            </div>
        </div>
    </div>
<%end%>
</div>
