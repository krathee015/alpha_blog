<% if logged_in? %>
    <% if @article.user != current_user %>
        <%= link_to article_likes_path(@article), class: "btn btn-outline-primary",method: :create do%> <%= fa_icon "thumbs-o-up"%> <%end%>
        <%# <% if already_liked?%>
            <%# <%= link_to article_like_path(@article), class: "btn btn-outline-primary",method: :delete, data: {confirm: "Are you sure to unlike?"} do <%= fa_icon "thumbs-o-up"%> 
            <%= link_to article_dislikes_path(@article), class: "btn btn-outline-danger", method: :create do%> <%= fa_icon "thumbs-o-down"%> <%end%>
        <p><%= @article.likes.count %> <%= (@article.likes.count) == 1 ? 'Like' : 'Likes'%>
        <%= @article.dislikes.count %> <%= (@article.dislikes.count) == 1 ? 'Dislike' : 'Dislikes'%></p>
    <% else %>
        <%= link_to article_likes_path(@article), class: "btn disabled btn-outline-primary",method: :create do%> <%= fa_icon "thumbs-o-up"%> <%end%>
        <%= link_to article_dislikes_path(@article), class: "btn disabled btn-outline-danger", method: :create do%> <%= fa_icon "thumbs-o-down"%> <%end%>
    <% end %>
<% end %>